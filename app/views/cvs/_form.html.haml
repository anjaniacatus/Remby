= f.error_messages
%p
  #form_cv
    = f.input :title, :label => "Titre" 
    %br
    = f.input :summary, :input_html => {:cols => 50, :rows => '3'}, :label => "description"
    %br
    =f.label :summary
    = f.file_field :summary


#degree_course_children
  - f.fields_for :degree_courses do |degree_course_form|
    = render :partial => 'degree_course', :locals => { :f => degree_course_form }
