.search
  -if current_user && current_user.roles == "compagny" 
    - form_tag cvs_path, :method => 'get' do
      %p
        = "CV? "
        .field
          = text_field_tag :q, params[:q]
        = submit_tag "Search", :name => nil

  -if current_user && current_user.roles == "member" 
    - form_tag jobs_path, :method => 'get' do
      %p
        = "OFFRES? "
        .field
          = text_field_tag :q, params[:q]
        = image_submit_tag ("search.png")

  -if !current_user
    - form_tag jobs_path, :method => 'get' do
      %p
        = "OFFRES? "
        .field
          = text_field_tag :q, params[:q]
        = image_submit_tag ("search.png")
        %img.flex{ :title => "Remby!", :src => "/images/abeille.gif?1252593908", :alt => "Remby ?* par http://remby.com"}/


