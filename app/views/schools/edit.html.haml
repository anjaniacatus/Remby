%h1 Editing school
- form_for(@school) do |f|
  = f.error_messages
  %p
    = f.label :name
    %br/
    = f.text_field :name
  %p
    = f.label :permalink
    %br/
    = f.text_field :permalink
  %p
    = f.label :description
    %br/
    = f.text_area :description
  %p
    = f.label :founded_on_year
    %br/
    = f.date_select :founded_on_year
  %p
    = f.submit 'Update'
= link_to 'Show', @school
|
\#{link_to 'Back', schools_path}
