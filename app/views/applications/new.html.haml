%h1 New application
- semantic_form_for([@application.job, @application]) do |f|
  = f.error_messages
  %p
    - unless current_user.civil_status.blank?
      = f.collection_select(:cv_id, @cvs, :id, :title, params  )
    %br/
  %p
    = f.label :title
    %br/
    = f.text_field :title
  %p
    = f.submit 'Create'
= link_to "Back to job", job_path(@application.job)
