- title " All CVS "
.results
  -unless @search.blank?
    -@search.results.each do |cv|
      .result
        %h1 = h(cv.title)
        %p = h(truncate(cv.summary))
    .pagination = will-paginate(@search.results)
- if current_user
  -unless current_user.civil_status.cvs.blank?
    = render @cvs
  -else
    ="vous ne diposez d'aucun CV pour l'instant!"
- else 
  = link_to "se connecter", login_url
- unless current_user.blank?
  - if current_user.roles == "member" && !current_user.civil_status.blank?
    - @civil_status = current_user.civil_status 
  - if current_user.roles == "compagny"
    = "rubrique compagny"
