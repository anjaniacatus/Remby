<h1>New society</h1>

<% form_for(@society) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :baseline %><br />
    <%= f.text_field :baseline %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :category, "Dénomination" %><br />
    <%= f.select :category, Society::Categories %>
  </p>
  <p>
    <%= f.label :sector , "Secteur d'Activité"%><br />
    <%= f.select :sector, Society::Sectors %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', societies_path %>