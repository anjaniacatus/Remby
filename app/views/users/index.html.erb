<h1>Users</h1>

<table>
  <tr>
    <th>Login</th>
    <th>Roles</th>
  </tr>
<% for user in @users %>
  <tr>
    <td><b><%= h user.username %></b></td>
    <td><%= h user.role %></td>
    <td>
      <%= link_to 'Edit', edit_user_path(user)  %>
      <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete  %>
    </td>
  </tr>
<% end %>
</table>
