
<p>
  <%= f.input:family_name  , :label => "Votre Nom ici...", :hint => "Votre nom ici."
 %>
</p>

<p>
<%= f.input :name , :label => "Prenom", :hint => "Votre prenom"%>
</p>

<p>
<%= f.input :birthday, :label => "Date de naissance",:start_year => 1930, :use_month_numbers => true, :order => [:day, :month, :year] %>
</p>

<p>
<%= f.input :hometown, :label => "Lieu de naissance" %>
</p>

<p>
<%= f.input :current_city, :label => "Ville" %>
</p>

<p>
<%= f.input :gender, :collection => ["female", "male"] %>
</p>

<p>
  <%= f.input :status, :collection => ["married", "single"] %>
</p>

<div id='contact_info_children'>
  <% f.fields_for :contact_infos do |contact_info_form| %>
    <%= render :partial => 'contact_info', :locals => { :f => contact_info_form } %>
  <% end %>
</div>
<p>
  <%= add_child_link 'Add Contacts', 'contact_info', f %>
</p>

