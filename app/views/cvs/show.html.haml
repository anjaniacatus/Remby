%p
  - unless @cv.civil_status.blank?
    = render @cv.civil_status
  %b Title:
  = h @cv.title
%p
  %b Summary:
  = h @cv.summary
.child
  - unless @cv.degree_courses.blank?
    = "Etude effectuÃ©: "
    - @cv.degree_courses.each do |f|
      - unless f.field.blank?
        = f.field.field_name
  %h3 Degree_courses
  = render @cv.degree_courses
.child
  - unless @cv.experiences.blank?
  %h3 Experiences
  = render @cv.experiences
.child
  - unless @cv.languages.blank?
