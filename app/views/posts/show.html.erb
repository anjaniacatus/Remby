<p>
  <b>Title:</b>
  <%=h @post.title %>
</p>

<p>
  <b>Description:</b>
  <%=h @post.description %>
</p>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<div id="comment"> 
  <%= render :partial => @post.comments%>  
</div>

<%form_for [@post, Comment.new] do |f| %>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Add comment' %>
  </p>
<% end %>

