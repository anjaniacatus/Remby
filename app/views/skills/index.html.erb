<h1>Listing skills</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Name</th>
    <th>Level</th>
    <th>Description</th>
    <th>Profile</th>
  </tr>

<% @skills.each do |skill| %>
  <tr>
    <td><%=h skill.title %></td>
    <td><%=h skill.name %></td>
    <td><%=h skill.level %></td>
    <td><%=h skill.description %></td>
    <td><%=h skill.profile %></td>
    <td><%= link_to 'Show', skill %></td>
    <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
    <td><%= link_to 'Destroy', skill, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New skill', new_skill_path %>