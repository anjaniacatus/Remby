<h1>Listing civil_statuses</h1>

<table>
  <tr>
    <th>Family name</th>
    <th>Name</th>
    <th>Age</th>
    <th>Birthday</th>
    <th>Hometown</th>
    <th>Current city</th>
    <th>Gender</th>
    <th>Status</th>
  </tr>

<% @civil_statuses.each do |civil_status| %>
  <tr>
    <td><%=h civil_status.family_name %></td>
    <td><%=h civil_status.name %></td>
    <td><%=h civil_status.age %></td>
    <td><%=h civil_status.birthday %></td>
    <td><%=h civil_status.hometown %></td>
    <td><%=h civil_status.current_city %></td>
    <td><%=h civil_status.gender %></td>
    <td><%=h civil_status.status %></td>
    <td><%= link_to 'Show', civil_status %></td>
    <td><%= link_to 'Edit', edit_civil_status_path(civil_status) %></td>
    <td><%= link_to 'Destroy', civil_status, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

