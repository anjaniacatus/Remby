<h1>Editing user: <%= h @userp.username%></h1>
<% semantic_form_for(@userp) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  
  <p>
    <%= f.label :password, "new password" %><br />
    <%= f.password_field :password %>
  </p>
  
  <p>
    <%= f.label :password_confirmation, "new password" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  
  <p>
    <%-if current_user && !is_admin? %>
      <%= f.label :roles %>
      <%= f.input :roles, :collection => ["member", "compagny"] %>   
    <% end %>
  </p>
 
  <p>
  <%- if current_user && is_admin? %>
    <%= f.label :roles %><br />
    <%= f.select :roles, (controller.authorization_engine.roles) %>
  <% end %>  
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', root_path %>
