<% content_tag_for :span, contact_information do
  concat "#{(contact_information.value_format_sym)}&nbsp;:&nbsp;"
  case contact_information.value_format_sym
  when :email
    concat mail_to(contact_information.value)
  when :website
    concat link_to(contact_information.value, contact_information.value)
  else
    concat contact_information.value
  end
end %>
