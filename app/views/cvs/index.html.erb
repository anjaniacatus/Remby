<h1>Listing cvs</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Summary</th>
  </tr>

<% @cvs.each do |cv| %>
  <tr>
    <td><%=h cv.title %></td>
    <td><%=h cv.summary %></td>
    <%- unless @civil_status.blank?%>
      <td><%= link_to 'Show', civil_status_cv_path(@civil_status, cv) %></td>
    <%- else %>
      <%= link_to 'show', cv %>
    <%end%>
    <td><%= link_to 'Edit', edit_cv_path(cv) %></td>
    <td><%= link_to 'Destroy', cv, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New cv', new_civil_status_cv_path(@civil_status) %>